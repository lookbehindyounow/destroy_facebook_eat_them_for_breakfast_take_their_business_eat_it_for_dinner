{% extends "base.jinja" %}{% block content %}{% for post in posts %}
<div class="post">
  <p class="post__body content"><a class="post--link" href="/{{post[0].id}}">{{post[0].content}}</a></p>
  <br/>
  {# likes #}
  {% if post[1]!=0 %}
    <p class="post__body comment_count"><a class="post--link" href="/{{post[0].id}}">{{post[1]}} comment{% if post[1]!=1 %}s{% endif %}</a></p>
  {% endif %}
</div>
<br/>
{% endfor %}{% endblock %}
