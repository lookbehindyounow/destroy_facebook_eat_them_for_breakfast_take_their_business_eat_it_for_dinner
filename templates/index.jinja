{% extends "base.jinja" %}{% block content %}
<section class="feed">
  {% for post in posts %}
  <div class="post">
    <div class="post__left">
      <h4 class="post__body name">{{post[1]}}</h4>
      <p class="post__body content"><a class="post--link" href="/{{user_id}}/{{post[0].id}}">{{post[0].content}}</a></p>
      {# likes #}
      {% if post[2]!=0 %}
        <br/>
        <p class="post__body comment_count"><a class="post--link" href="{{user_id}}/{{post[0].id}}">{{post[2]}} comment{% if post[2]!=1 %}s{% endif %}</a></p>
      {% endif %}
    </div>
    <div class="post__right">
    {% if user_id==post[0].user_id %}
      <a href="{{user_id}}/{{post[0].id}}/edit_post_form">edit</a>
      <br/>
      <a href="{{user_id}}/{{post[0].id}}/delete_post">delete</a>
    {% endif %}
    </div>
  </div>
  <br/>
  {% endfor %}
</section>
<section class="something_else_not_sure_yet">something will go here</section>
{% endblock %}
