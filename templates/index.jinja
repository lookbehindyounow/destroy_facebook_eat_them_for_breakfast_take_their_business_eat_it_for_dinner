{% extends "base.jinja" %}{% block content %}{% for post in posts %}
<div class="post">
  <div class="post__content">
    <p>{{post[0].content}}</p>
  </div>
  {# likes #}
  {% if post[1]!=0 %}
    <a href="/{{post[0].id}}">{{post[1]}} comment{% if post[1]!=1 %}s{% endif %}</a>
  {% endif %}
  <br/>
</div>
{% endfor %}{% endblock %}
